<html>
    <head>
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/detail.css">
    </head>
    <body>
        <div id="container">
            <%- include("header.ejs") %>
        </div>
        <div id="content">
            <img src="<%= image %>">
            <h2><%= name %></h2>
            <table>
                <thead>
                    <tr>
                        <th>Model</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% detail.map((car) => { %>
                        <tr>
                            <td><%= car.model %></td>
                            <td><%= car.price %></td>
                            <td><%= car.quantity %></td>
                            <td><a href="/edit/?name=<%= car.name %>&model=<%= car.model %>">Edit</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            
        </div>
    </body>
</html>