<html>
    <head>
        <link rel="stylesheet" href="/css/create.css">
        <link rel="stylesheet" href="/css/header.css">
        <script>
            function showForm(formId) {
                document.getElementById('categoryForm').style.display = 'none';
                document.getElementById('modelForm').style.display = 'none';
                document.getElementById(formId).style.display = 'block';
            }
        </script>
    </head>
    <body>
        <div id="container">
            <%- include("header.ejs") %>
            
            
            <select onchange="showForm(this.value)" style="margin: 10px; font-size: large;" >
                <option value="categoryForm">New category</option>
                <option value="modelForm" >New model</option>                
            </select>
            <p style="margin-top: 0px;">Add category before adding model</p>
        
    

            <div id="categoryForm" class="form-container">
                
                <form method="post" action="/create/category">
                    <label for="type">Car type: <input type="text" name="type" id="type" placeholder="SUV" required></label>
                    <label for="name">Car name: <input type="text" name="name" id="name" placeholder="X3" required></label>
                    
                    <label for="img">Image url: <input type="text" name="img" id="img" required></label>
                    <input type="submit" value="submit">
                </form>
            </div>

            <div id="modelForm" class="form-container" style="display: none;">
                <form method="post" action="/create/model" >
                    
                    <label for="name">Car name: 
                        <select name="name" id="name" class="form-input">
                        <% name.map(car => {%>
                            <option value="<%= car.name %>"><%= car.name %></option>
                        <%})%>
                    </select>
                    </label>
                    <label for="model">Car model:
                        <input type="text" name="model" id="model" placeholder="xDrive30Li">
                    </label>
                    
                    <label for="price">Price: 
                        <input type="number" name="price" id="price">
                    </label>
                    
        
                    <label for="quantity">Quantity: 
                        <input type="number" name="quantity" id="quantity">
                    </label>
                    
                    <input type="submit" value="submit">
                
                </form>
            </div>
        </div>
    </body>
</html>